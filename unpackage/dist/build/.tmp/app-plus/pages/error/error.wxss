page {
  background-color: #F2F2F2;
}
.error {
  width: 100%;
  height: 100%;
  text-align: center;
}
.error_pic {
    margin-top: 210rpx;
    height: 430rpx;
    width: 750rpx;
}
.error_title {
    font-size: 33rpx;
    font-family: PingFangSC-Medium;
    font-weight: 600;
    color: #2c2222;
    line-height: 53rpx;
}
.error_disc {
    margin: 22rpx 0 39rpx 0;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #7d8386;
    line-height: 33rpx;
}
.error_actions {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
}
.error_actions-back {
      margin-left: 177rpx;
      margin-right: 50rpx;
      width: 185rpx;
      height: 67rpx;
      line-height: 67rpx;
      border-radius: 11rpx;
      border: 1rpx solid #cdc7c7;
      font-size: 24rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      color: #7d8386;
}
.error_actions-index {
      width: 161rpx;
      height: 67rpx;
      line-height: 67rpx;
      background: -webkit-gradient(linear, left top, right top, from(#f23f0f), to(#f61e15));
      background: -o-linear-gradient(left, #f23f0f 0%, #f61e15 100%);
      background: linear-gradient(90deg, #f23f0f 0%, #f61e15 100%);
      border-radius: 11rpx;
      font-size: 24rpx;
      font-family: PingFangSC-Regular;
      font-weight: 400;
      color: white;
}

