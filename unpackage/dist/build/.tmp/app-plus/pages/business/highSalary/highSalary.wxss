page {
  font-size: 0;
  overflow: hidden;
  background: red;
}
.page {
  position: relative;
  width: 100%;
  height: 100vh;
}
.page .bg {
    width: 100%;
    height: 100vh;
}
.page .back {
    position: absolute;
    width: 125rpx;
    height: 50rpx;
    text-align: center;
    background: white;
    -webkit-box-shadow: 0rpx 1rpx 0rpx 0rpx #e21616;
            box-shadow: 0rpx 1rpx 0rpx 0rpx #e21616;
    border-radius: 6rpx;
    font-size: 19rpx;
    font-weight: 500;
    right: 33rpx;
    top: 236rpx;
    color: #e21616;
    line-height: 50rpx;
}
.page .content {
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto;
    top: 346rpx;
    width: 683rpx;
    height: 700rpx;
    background: #ffffff;
    -webkit-box-shadow: 0rpx -1rpx 0rpx 0rpx rgba(93, 72, 67, 0.16);
            box-shadow: 0rpx -1rpx 0rpx 0rpx rgba(93, 72, 67, 0.16);
    border-radius: 11rpx;
    overflow: hidden;
}
.page .content-item {
      padding: 0 28rpx 0 78rpx;
      position: relative;
      padding-top: 1rpx;
      height: 175rpx;
      border-bottom: 1rpx solid rgba(93, 72, 67, 0.16);
}
.page .content-item .number {
        position: absolute;
        top: 39rpx;
        left: 0;
        width: 67rpx;
        height: 67rpx;
        font-weight: 900;
        font-size: 67rpx;
        line-height: 67rpx;
        text-align: center;
        color: #ff140a;
}
.page .content-item .number .fix {
          border-top: 2rpx solid #ff140a;
          background: #ffffff;
          height: 30rpx;
          width: 40rpx;
          -webkit-transform: rotate(-40deg);
              -ms-transform: rotate(-40deg);
                  transform: rotate(-40deg);
          position: relative;
          left: 30rpx;
          top: -20rpx;
}
.page .content-item .title {
        margin: 16rpx 0;
        font-size: 25rpx;
        font-weight: 700;
        color: #2c2222;
        line-height: 40rpx;
        overflow: hidden;
}
.page .content-item .disc {
        font-size: 19rpx;
        font-weight: 400;
        color: #7d8386;
}
.page .content-item .disc_item {
          margin: 0 0 10rpx 0;
}
.page .content-item .button {
        position: absolute;
        right: 28rpx;
        top: 79rpx;
        width: 133rpx;
        height: 50rpx;
        font-size: 19rpx;
        text-align: center;
        line-height: 50rpx;
        font-weight: 400;
        color: white;
        background: -webkit-gradient(linear, left top, right top, from(#f23f0f), to(#f61e15));
        background: -o-linear-gradient(left, #f23f0f 0%, #f61e15 100%);
        background: linear-gradient(90deg, #f23f0f 0%, #f61e15 100%);
        -webkit-box-shadow: 0rpx -1rpx 0rpx 0rpx rgba(93, 72, 67, 0.16);
                box-shadow: 0rpx -1rpx 0rpx 0rpx rgba(93, 72, 67, 0.16);
}
.page .content-item .button_gray {
        background: -webkit-gradient(linear, left top, right top, from(#d9dde0), to(#c6cccf));
        background: -o-linear-gradient(left, #d9dde0 0%, #c6cccf 100%);
