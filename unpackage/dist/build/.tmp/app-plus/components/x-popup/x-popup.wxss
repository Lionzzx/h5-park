.x-mask {
  position: fixed;
  z-index: 998;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}
.x-icon {
  width: 100%;
  height: 100%;
}
.x-popup {
  position: fixed;
  z-index: 999;
}
.x-popup-title {
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    padding-left: 33rpx;
    width: 683rpx;
    height: 78rpx;
    font-size: 25rpx;
    font-weight: 700;
    line-height: 78rpx;
    color: #2c2222;
    overflow: hidden;
    -o-text-overflow: ellipsis;
       text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}
.x-popup-middle {
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  -webkit-box-shadow: 0rpx 11rpx 17rpx 0rpx rgba(0, 0, 0, 0.5);
          box-shadow: 0rpx 11rpx 17rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 11rpx;
}
.x-close {
  position: absolute;
  text-align: center;
  line-height: 56rpx;
  font-size: 40rpx;
  color: #000;
  right: -24rpx;
  top: -24rpx;
  font-weight: 700;
  background: #fff;
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
}
.uni-close-bottom,
.uni-close-right {
  position: absolute;
  bottom: -180rpx;
  text-align: center;
  border-radius: 50%;
  color: #f5f5f5;
  font-size: 60rpx;
  font-weight: bold;
  opacity: 0.8;
  z-index: 1;
}
.uni-close-bottom {
  margin: auto;
  left: 0;
  right: 0;
}
.uni-close-right {
  right: -32rpx;
  top: -36rpx;
}
.uni-close-bottom:after {
  content: '';
  position: absolute;
  width: 0px;
  border: 1px #f5f5f5 solid;
  top: -200rpx;
  bottom: 56rpx;
  left: 50%;
  -webkit-transform: translate(-50%, 0%);
      -ms-transform: translate(-50%, 0%);
          transform: translate(-50%, 0%);
  opacity: 0.8;
}

